            <h1 class="site-title">
                <a href="/"><%= site.title %></a>
            </h1>
            
            <nav class="navigation">
                <% navigation.forEach(function(item) { %>
                    <a href="<%= item.url %>" class="nav-link"><%= item.title %></a>
